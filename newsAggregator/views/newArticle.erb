<h3>Submit your distracting article here:</h3>
<form action="/articles/new" method="post">
  <label for="title">Title:</label><input type="text" name="title" id="title" value="<%= @title %>"/>
  <br />
  <label for="url">URL:</label><input type="text" name="url" id="url" value="<%= @url %>"/>
  <br />
  <label for="description">Description:</label><input type="text" name="description" id="description" value="<%= @description %>"/>
  <br />
  <input type="submit" value="Submit" />

  <p>
    <%= @errorMessage %>
    <ul>
      <% @errors.each do |error| %>
      <li>
        <%= error %>
      </li>
      <% end %>
    </ul>
  </p>
</form>